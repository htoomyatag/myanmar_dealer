<div class="col-md-12">
  <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
              <%= image_tag @product.avatar1_edit, :id => "product_avatar" %>
        </div>
      </div>
  </div>
  <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
                
              <p>
                <span style="color:grey;">Title:</span>
                <%= @product.title %> 
                 <span style="float:right;"> 
                 <%= link_to 'Edit', edit_product_path(@product) %>
                 </span> 
              </p><hr/>

              <p>
                <span style="color:grey;">Color:</span>
                <%= @product.color %>
              </p><hr/>

              <p>
                <span style="color:grey;">Size:</span>
                <%= @product.size %>
              </p><hr/>

              <p>
                <span style="color:grey;">Quantity:</span>
                <%= @product.quantity %>
              </p><hr/>

              
             
        </div>
      </div>
  </div>

  <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
           <%= image_tag @product.avatar2_edit, :id => "product_avatar" %>
        </div>
      </div>
  </div>
  <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
           <%= image_tag @product.avatar3_edit, :id => "product_avatar" %>
        </div>
      </div>
  </div>
  <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
           <%= image_tag @product.avatar4_edit, :id => "product_avatar" %>
        </div>
      </div>
  </div>

</div>






