<div class="col-md-12">
  <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
            <%= image_tag @product.avatar1.url(:medium), :id => "product_avatar" %>
        </div>
      </div>
  </div>
  <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
                
              <p>
                <span style="color:grey;">Title:</span>
                <%= @product.title %> 
                 <span style="float:right;"> 
                 <%= link_to 'Edit', edit_product_path(@product) %>
