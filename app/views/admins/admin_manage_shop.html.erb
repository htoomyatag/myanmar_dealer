    <div class="well well-sm"> <h4>Stores</h4></div>

    <table class="table table-bordered">
      <thead>
        <tr>
          	<th>Store Name</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Desc</th>
            <th>Seller name</th>
            <th>Open Date</th>
            <th>Action</th>
        </tr>
      </thead>

      <tbody>
         <% @stores.each do |store| %>
          <tr>
            <td><a id="store_id" data-toggle="modal" data-target="#my<%= store.id %>"><%= store.store_name %></a></td>
            <td><%= store.store_address %></td>
            <td><%= store.store_contact %></td>
            <td><%= store.description %></td>
            <td><%= store.seller_name %></td>
            <td><%= store.created_at.strftime("%m/%d/%Y") %></td>
            <td><%= link_to 'Remove', store, :class=>"btn btn-danger btn-xs", :remote => true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>


          <!-- dialog -->

          <div class="modal fade" id="my<%= store.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel"><%= store.store_name %></h4>
                </div>
                <div class="modal-body">


                     <p> 
                         <span class="mystore_name"> STORE: <%= store.store_name %> </span>  
                         <span class="mystore_seller">SELLER: <%= store.seller_name %> </span>   
                    </p><br/><br/>


                  
                   <h4>  Contact number </h4><hr/>
                   <p><%= store.store_contact %></p><br/>
                   <h4> Address</h4><hr/>
                   <p><%= store.store_address %></p><br/>


                   <h4>  Description </h4><hr/>
                   <p><%= store.description %></p><br/>
                   <h4> Termns & Condition </h4><hr/>
                   <p><%= store.term %></p><br/>
             


                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>




        <% end %>
      </tbody>
    </table>

    <br>

</div>