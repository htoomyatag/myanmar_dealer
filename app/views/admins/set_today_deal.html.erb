    <div class="well well-sm"> <h4>Set today DEAL</h4></div>

   <div class="panel panel-default">
	  <div class="panel-body">
	  		 DISCOUNT PERCENTAGE: <%= @admin.discount_percent %> <br/>
	  		 PRICE: <%= @admin.price %> <br/>
	  </div>
	</div>


    <div class="panel panel-default">
	  <div class="panel-body">
	    

	  		<%= form_for(@admin) do |f| %>
					  <% if @admin.errors.any? %>
					    <div id="error_explanation">
					      <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

					      <ul>
					      <% @admin.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
					      </ul>
					    </div>
					  <% end %>


					   <div class="form-group">
					    <%= f.label :ends_in %>
					    <%= f.date_field :ends_in %>
					  </div>

					    <div class="form-group">
					    <%= f.label :discount_percent %>
					    <%= f.text_field :discount_percent %>
					  </div>


  						<div class="form-group">
					    <%= f.label :price %>
					    <%= f.text_field :price %>
					  </div>

					    <div class="field">
						    <%= f.label :avatar %>
						    <%= f.file_field :avatar %>
						 </div><br/>




					  <div class="actions">
					    <%= f.submit "set today deal" %>
					  </div>
			
			<% end %>


	  </div>
	</div>




		    <p id="notice" style="color:#d9534f;font-weight:bold;"><%= notice %></p>

		    <h4>Listing Products</h4>

		    <table class="table">
		      <thead>
		        <tr> 
		          <th>Code</th>
		          <th>Title</th>
		          <th>Price</th>
		          <th></th>
		          <th></th>
		        </tr>
		      </thead>

		      <tbody>
		        <% @products.each do |product| %>
		          <tr>
		            <td><%= product.mmdealer_code %></td>
		            <td><%= product.title %></td>
		            <td><%= product.price %></td>
		            <td>
		            	<%= link_to 'Set as BigDeal', set_as_bigdeal_path(product), :class=>"btn btn-default" %>
		            </td>
		            <td>
		               <%= link_to 'Set as todayDeal', admin_set_today_deal_path(:discount_percent => "", :price => product.price), :class=>"btn btn-default" %>
		            </td>

		          </tr>
		        <% end %>
		      </tbody>
		    </table>

		    <br>

		

  


