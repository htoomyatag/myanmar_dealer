	var aok = $("#order_status_processing").text();
	document.getElementById("order_order_status").value = aok;


});

$(document).on('click', '#order_status_completed', function() {

	var aok = $("#order_status_completed").text();
	document.getElementById("order_order_status").value = aok;


});


$(document).on('click', '#order_status_rejected', function() {

	var aok = $("#order_status_rejected").text();
	document.getElementById("order_order_status").value = aok;


});

</script>


