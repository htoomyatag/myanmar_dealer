
   <div class="container">
    <center><img src="/assets/Loading_icon.gif", style="height:500px;text-align:center;"  /></center>
  </div>


   <%= form_for(:user, :url => session_path(:user), :html => {:id => 'aok',:name => 'aok'}) do |f| %>
                <div class="form-group">
                  <label class="sr-only" for="exampleInputEmail2">Email</label>
                  <%= f.email_field :email, autofocus: true, :class=>"form-control" %>
                </div>
                <div class="form-group">
                  <label class="sr-only" for="exampleInputPassword2">Password</label>
                  <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
                </div>
                <button type="submit" class="btn btn-black">
                  Login
                </button>
    <% end %>




<script type="text/javascript">
	



$(document).ready(function(){

	$("#aok").hide();
  
  var data = '<%= @aok %>';
  var sss = data.replace(/&quot;/g, '"');
  
  var obj = $.parseJSON(sss);
  document.getElementById('user_email').value = obj['email']; 
  document.getElementById('user_password').value = obj['password']; 

	$("#aok").submit();
});

</script>

