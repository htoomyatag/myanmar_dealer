<p id="notice"><%= notice %></p>

<h1>Listing Toys</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Weight</th>
      <th>Made by country</th>
      <th>Made with</th>
      <th>Description</th>
      <th>Color</th>
      <th>Age group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toys.each do |toy| %>
      <tr>
        <td><%= toy.title %></td>
        <td><%= toy.price %></td>
        <td><%= toy.quantity %></td>
        <td><%= toy.weight %></td>
        <td><%= toy.made_by_country %></td>
        <td><%= toy.made_with %></td>
        <td><%= toy.description %></td>
        <td><%= toy.color %></td>
        <td><%= toy.age_group %></td>
        <td><%= link_to 'Show', toy %></td>
        <td><%= link_to 'Edit', edit_toy_path(toy) %></td>
        <td><%= link_to 'Destroy', toy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

