	<%= render 'layouts/defaultnav' %>	

	<br/><div class="row" style="margin:10px;">
		<section class="products-list">		
	
						<!-- Heading Starts -->
							<h2 class="product-head">Medicine</h2>
						<!-- Heading Ends -->
						<!-- Products Row Starts -->
							<div class="row">
							<!-- Product #1 Starts -->
							<% @medicines.each do |medicine| %>
								<div class="col-md-2 col-sm-6">
									<div class="product-col">
										<div class="image">
											<% if !medicine.avatar1_file_name.nil?  %>
								                <%= image_tag medicine.avatar1.url, :id => "product_crop_image"  %>
								            <% else  %>      
												<img src="/assets/no_image.jpg" alt="product" class="img-responsive" />
								            <% end %>
										</div>
										<div class="caption">
											<h6>
											<%= link_to medicine.title, full_productinfo_medicines_path(:id => medicine) %>
											</h6>
											
											<div class="price">
												<span class="price-new"><%= medicine.price.to_i %> <%=t :MMK %></span> 
												<span class="price-old"><%= medicine.price.to_i + 15 %> <%=t :MMK %></span>
											</div>
											<div class="cart-button">
											
											<%= button_to line_items_path(:mmdealer_code => "medicines"+medicine.id.to_s, :user_id => medicine.user_id), :class =>"btn btn-cart" do %>
											     Add to cart &nbsp;&nbsp;
											  
											<% end %>


																			
											</div>
										</div>
									</div>
								</div>
							<% end %>
							<!-- Product #1 Ends -->
							<!-- Product #2 Starts -->
								
							<!-- Product #3 Ends -->
							</div>
						<!-- Products Row Ends -->
		</section>
	</div>
		</div>
	</div>
</div>
