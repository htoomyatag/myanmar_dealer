<div class="col-md-12">
  <div class="col-md-3">


        <div class="panel panel-default">
          <div class="panel-body">
          <center>
             <%= image_tag @store.avatar.url(:thumb), :id => "store_avatar" %>
          </center> 
          <br/>
           
          </div>
        </div>


  </div>

  <div class="col-md-5">


        <div class="panel panel-default">
          <div class="panel-body">

           
            About store
            <hr/>
            <%= @store.description %>
          </div>
        </div>


  </div>
  <div class="col-md-4">
    
            <ul class="list-group">
                <li class="list-group-item">Store: 
                <span style="color:grey;"><%= @store.store_name %></span></li>
               
                <li class="list-group-item">Address: 
                 <span style="color:grey;"><%= @store.store_address %></span></li>
          
                <li class="list-group-item">Contact: 
                 <span style="color:grey;"><%= @store.store_contact %>
                 </span></li>

          
               
                <li class="list-group-item">Seller:
                 <span style="color:grey;"> <%= @store.seller_name %>
                 </span></li>

                 <li class="list-group-item">
                 <%= link_to 'exdit store profile here', edit_store_path(@store) %>
                 </li>
            </ul>
        
  </div>








<div class="col-md-12">



<h5>Listing Products
<%= link_to 'New Product', new_product_path %>
</h5>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th>Size</th>
      <th>Weight</th>
      <th>Seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.color %></td>
        <td><%= product.size %></td>
        <td><%= product.weight %></td>
        <td><%= product.seller_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>

</div>





 

