<div class="col-md-12">
  <div class="col-md-3">


        <div class="panel panel-default">
          <div class="panel-body">
          <center>
           
             <% if !@store.avatar_file_name.nil?  %>
                    <%= image_tag @store.avatar.url, :id => "store_avatar" %>
              <% else  %>      
                   <%= image_tag "shop-icon.png", :id => "store_avatar" %>
            <% end %>
          </center> 
          <br/>
           
          </div>
        </div>


  </div>

  <div class="col-md-5">


        <div class="panel panel-default">
          <div class="panel-body">

           
            About store
            <hr/>
            <%= @store.description %>
          </div>
        </div>


  </div>
  <div class="col-md-4">
    
            <ul class="list-group">
                <li class="list-group-item">Store: 
                <span style="color:grey;"><%= @store.store_name %></span></li>
               
                <li class="list-group-item">Address: 
                 <span style="color:grey;"><%= @store.store_address %></span></li>
          
                <li class="list-group-item">Contact: 
                 <span style="color:grey;"><%= @store.store_contact %>
                 </span></li>

          
               
                <li class="list-group-item">Seller:
                 <span style="color:grey;"> <%= @store.seller_name %>
                 </span></li>

                 <li class="list-group-item">
                 <%= link_to 'edit store profile here', edit_store_path(@store) %>
                 </li>
            </ul>
        
  </div>




<div class="col-md-12">

      <div class="well well-lg"> Store Images</div>

      <img src="<%= @store.description_image1 %>" id="desc_image"/>
      <img src="<%= @store.description_image2 %>" id="desc_image"/>
      <img src="<%= @store.description_image3 %>" id="desc_image"/>
      <img src="<%= @store.description_image4 %>" id="desc_image"/>



<div class="page-header">
  <h3>Products <small> (Upload your products to your online store)</small></h3>

  <div class="bs-example" data-example-id="contextual-panels">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Add fashion related products to your store</h3>
      </div>
      <div class="panel-body">
                <a href="/fashion_clothings/new" class="btn btn-default">Clothings</a>
                <a href="/fashion_hats/new" class="btn btn-default">Hats</a>
                <a href="/fashion_footwears/new" class="btn btn-default">Footwears</a>
                <a href="/fashion_bags/new" class="btn btn-default">Bags</a>
                <a href="/fashion_accessories/new" class="btn btn-default">Accessories</a>
      </div>
    </div>
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Add electronics</h3>
      </div>
      <div class="panel-body">
                <a href="/electrical_equipments/new" class="btn btn-default">Electrical Equipments</a>
                <a href="/telephone_accessories/new" class="btn btn-default">Telephone and Accessories</a>
                <a href="/computers/new" class="btn btn-default">Computers and Laptops</a>
                <a href="/home_appliances/new" class="btn btn-default">Home Appliance </a>
      </div>
    </div>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Health & Beauty</h3>
      </div>
      <div class="panel-body">
                  <a href="/medicines/new" class="btn btn-default">Medicine </a>
                  <a href="/beauty_equipments/new" class="btn btn-default">Beauty Equipments </a>
                  <a href="/makeup_and_skincares/new" class="btn btn-default">Makeup and Skincare </a>
                  <a href="/bath_supplies/new" class="btn btn-default">Bath supply </a>
      </div>
    </div>
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title">Industrial Parts Tools</h3>
      </div>
      <div class="panel-body">
              
                  <a href="/equipment/new" class="btn btn-default">Industrial Equipments </a>
                  <a href="/instruments/new" class="btn btn-default">Instruments </a>
                  <a href="/machines/new" class="btn btn-default">Machines </a>
      </div>
    </div>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Auto Transportation</h3>
      </div>
      <div class="panel-body">
                 <a href="/motorcycle_accessories/new" class="btn btn-default">Motorcycle Accessories </a>
                 <a href="/car_accessories/new" class="btn btn-default">Motorcar Accessories </a>
      </div>
    </div>


    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Gifts</h3>
      </div>
      <div class="panel-body">
               <a href="/gifts/new" class="btn btn-default">Special Gifts </a>
               <a href="/sports/new" class="btn btn-default">Sports Accessories </a>
               <a href="/toys/new" class="btn btn-default" >Toys </a>

      </div>
    </div>

  </div>
  <div ng-app="plunker">
   <div ng-controller="MainCtrl">

             <div class="panel panel-default">
                  <div class="panel-heading">
                     Add as my seller
                  </div>
                  <div class="panel-body">
                     <div class="row">
                        <div class="col-lg-12">
                          
                           <div ng-init="users = <%= @users.to_json %>">
                           </div>
                           <!-- filter with name -->
                       
                              <input  ng-model="user.name" type="text" class="form-control input-lg" placeholder="Search by their name">
                           <br/>
                           <table class="table table-bordered">
                              <thead>
                                 <tr>
                                    <th>Name</th>
                                    <th colspan="2"></th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <tr ng-repeat="user in users | filter:{name:  user.name}">
                                    <td>{{user.name}}</td>
                                    <td> 
                                       <a id="set_admin" class="btn btn-warning btn-sm" 
                                       href="/set_my_seller?id={{user.id}}&store_id=<%= @store.id %>" data-remote=true  >


                                       Set us my seller</a>


                                    </td>
                                 </tr>
                              </tbody>
                           </table>
                        </div>
                     </div>
                     <!-- /.row (nested) -->
                  </div>
                  <!-- /.panel-body -->
               </div>
        </div>
  </div>


  </div>




</div>


<br>


</div>

</div>





 

<script type="text/javascript">
  

          
    $('#set_admin').on('click', function () {
       
       alert("set as your seller DONE");
    });


</script>