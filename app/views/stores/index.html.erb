

<p id="notice"><%= notice %></p>

<h1>Stores &nbsp;</h1> <%= link_to 'New Store', new_store_path, :class=>"btn btn-primary" %>
<div class="table-responsive">
  <table class="table">
   <thead>
    <tr>
      <th>Store name</th>
      <th>Contact number</th>
      <th>Contact address</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.store_name %></td>
        <td><%= store.contact_number %></td>
        <td><%= store.contact_address %></td>
        <td><%= store.owner %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Store', new_store_path, :class=>"btn btn-primary" %>
