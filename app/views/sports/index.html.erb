<p id="notice"><%= notice %></p>

<h1>Listing Sports</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Weight</th>
      <th>Made by country</th>
      <th>Made with</th>
      <th>Description</th>
      <th>Color</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports.each do |sport| %>
      <tr>
        <td><%= sport.title %></td>
        <td><%= sport.price %></td>
        <td><%= sport.quantity %></td>
        <td><%= sport.weight %></td>
        <td><%= sport.made_by_country %></td>
        <td><%= sport.made_with %></td>
        <td><%= sport.description %></td>
        <td><%= sport.color %></td>
        <td><%= sport.brand %></td>
        <td><%= sport.category %></td>
        <td><%= link_to 'Show', sport %></td>
        <td><%= link_to 'Edit', edit_sport_path(sport) %></td>
        <td><%= link_to 'Destroy', sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

