<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Number of paper</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Book description</th>
      <th>Avatar 1</th>
      <th>Avatar 2</th>
      <th>Avatar 3</th>
      <th>Avatar 4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.number_of_paper %></td>
        <td><%= book.price %></td>
        <td><%= book.publisher %></td>
        <td><%= book.book_description %></td>
        <td><%= book.avatar_1 %></td>
        <td><%= book.avatar_2 %></td>
        <td><%= book.avatar_3 %></td>
        <td><%= book.avatar_4 %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

