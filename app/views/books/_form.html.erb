




  <div class="col-md-6"> 

    <div class="panel panel-default">
        <div class="panel-body">
            <h4>New Beauty equipment</h4>
            <hr/>



            <%= form_for(@book, html: { multipart: true }) do |f| %>
              <% if @book.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

                  <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
      <%= f.text_field :store_name, :value => @store_name, :style => "display:none;" %>

            <div class="form-group" >
              <%= f.label :delivery_category %>
              <%= f.select(:delivery_category, Book::DELIVERY) %>
            </div>


             <div class="form-group" style="display:none;">
              <%= f.label :user_id %>
              <%= f.number_field :user_id, :value => current_user.id %>
            </div>

            <div class="form-group">
              <%= f.label :title %><br/>
              <%= f.text_field :title, :class=>"form-control", :required => true  %>
            </div>
        
            <div class="form-group">
                <%= f.label :author %><br>
                <%= f.text_field :author, :class=>"form-control", :required => true %>
            </div>
            <div class="form-group">
                <%= f.label :number_of_paper %><br>
                <%= f.text_field :number_of_paper, :class=>"form-control", :required => true %>
              </div>
               <div class="form-group">
                <%= f.label :price %><br>
                <%= f.text_field :price, :class=>"form-control", :required => true %>
              </div>
               <div class="form-group">
                <%= f.label :publisher %><br>
                <%= f.text_field :publisher, :class=>"form-control", :required => true %>
              </div>

          
         

        </div>
    </div> 
  
  </div>
