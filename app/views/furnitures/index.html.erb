<p id="notice"><%= notice %></p>

<h1>Listing Furnitures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Weight</th>
      <th>Dimension</th>
      <th>Price</th>
      <th>Made by</th>
      <th>Brand</th>
      <th>Avatar 1</th>
      <th>Avatar 2</th>
      <th>Avatar 3</th>
      <th>Avatar 4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @furnitures.each do |furniture| %>
      <tr>
        <td><%= furniture.title %></td>
        <td><%= furniture.weight %></td>
        <td><%= furniture.dimension %></td>
        <td><%= furniture.price %></td>
        <td><%= furniture.made_by %></td>
        <td><%= furniture.brand %></td>
        <td><%= furniture.avatar_1 %></td>
        <td><%= furniture.avatar_2 %></td>
        <td><%= furniture.avatar_3 %></td>
        <td><%= furniture.avatar_4 %></td>
        <td><%= link_to 'Show', furniture %></td>
        <td><%= link_to 'Edit', edit_furniture_path(furniture) %></td>
        <td><%= link_to 'Destroy', furniture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

