<div class="col-md-6"> 

    <div class="panel panel-default">
        <div class="panel-body">
            <h4>New furniture</h4>
            <hr/>


            <%= form_for(@furniture, html: { multipart: true }) do |f| %>
              <% if @furniture.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@furniture.errors.count, "error") %> prohibited this product from being saved:</h2>

                  <ul>
                  <% @furniture.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>


    <div class="form-group" >
              <%= f.label :delivery_category %>
              <%= f.select(:delivery_category, Furniture::DELIVERY) %>
     </div>


     <div class="form-group" style="display:none;">
              <%= f.label :user_id %>
              <%= f.number_field :user_id, :value => current_user.id %>
      </div>     

          
     <div class="form-group">
              <%= f.label :title %><br/>
              <%= f.text_field :title, :class=>"form-control", :required => true  %>
    </div>

   

     <div class="form-group">
              <%= f.label :price %><br/>
               <%= f.text_field :price, :class=>"form-control", :required => true  %> 
    </div>

     <div class="form-group">
              <%= f.label :quantity %><br/>
              <%= f.text_field :quantity, :class=>"form-control" , :required => true %>
      </div>

     <div class="form-group">
              <%= f.label :weight %><br/>
              <%= f.text_field :weight, :class=>"form-control" , :required => true %>
    </div>
     <div class="form-group">
              <%= f.label :dimension %><br/>
              <%= f.text_field :dimension, :class=>"form-control", :required => true  %>
    </div>
 
     <div class="form-group">
              <%= f.label :brand %><br/>
              <%= f.text_field :brand, :class=>"form-control" , :required => true %>
      </div>
   
    
     <div class="form-group">
              <%= f.label :made_by %><br/>
              <%= f.text_field :made_by, :class=>"form-control", :required => true  %>
      </div>



        </div>
    </div> 
  </div>


